generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ARTIST
  INDIVIDUAL
  ADMIN
}

enum Blockchain {
  NEAR
}

model Wallet {
  id    Int     @default(autoincrement()) @id
  blockchain Blockchain
  address String
  userId Int
  user User @relation(fields: [userId], references: [id])
  royalties Royalty[]

  @@unique([blockchain, address])
}

model Royalty {
  userId Int
  user User @relation(fields: [userId], references: [id])
  walletId Int
  wallet Wallet @relation(fields: [walletId], references: [id])
  percent Int

  @@id([userId, walletId])
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String  @unique
  email String?  @unique
  avatar String? @unique
  type UserType
  wallets Wallet[]
  royalties Royalty[]
  nfts Nft[]
}

model Nft {
  id String
  title String?
  description String?
  media String
  creatorId Int
  creator User @relation(fields: [creatorId], references: [id])
  createdAt DateTime @default(now())
  blockchain Blockchain

  @@id([id, blockchain])
}